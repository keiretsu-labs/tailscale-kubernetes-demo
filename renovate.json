{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": ["prEditedNotification", "prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "schedule": ["at any time"],
  "flux": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "regexManagers": [
    {
      "description": "Process HelmRelease CRD dependencies",
      "fileMatch": ["\\.ya?ml$"],
      "matchStrings": [
        "apiVersion:\\s*helm\\.toolkit\\.fluxcd\\.io\\/v.*\\s+kind:\\s*HelmRelease[\\s\\S]*?spec:[\\s\\S]*?chart:[\\s\\S]*?spec:[\\s\\S]*?chart:\\s*(?<depName>[^\\s]+)[\\s\\S]*?version:\\s*['\"]?(?<currentValue>[^\\s'\"]+)['\"]?"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "description": "Process HelmRepository URL dependencies",
      "fileMatch": ["\\.ya?ml$"],
      "matchStrings": [
        "apiVersion:\\s*source\\.toolkit\\.fluxcd\\.io\\/v.*\\s+kind:\\s*HelmRepository[\\s\\S]*?spec:[\\s\\S]*?url:\\s*['\"]?(?<depName>https?:\\/\\/[^\\s'\"]+)['\"]?"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "description": "Process container image dependencies",
      "fileMatch": ["\\.ya?ml$"],
      "matchStrings": [
        "image:\\s*['\"]?(?<depName>[^:@\\s'\"]+):(?<currentValue>[^@\\s'\"]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?['\"]?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Require approval for all updates",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Group Flux system updates",
      "matchPackageNames": ["fluxcd/flux2"],
      "groupName": "Flux system updates"
    },
    {
      "description": "Group Helm chart updates",
      "matchDatasources": ["helm"],
      "groupName": "Helm charts"
    },
    {
      "description": "Auto-merge patch updates for trusted sources",
      "matchUpdateTypes": ["patch"],
      "matchPackageNames": [
        "cert-manager",
        "ingress-nginx",
        "kube-prometheus-stack"
      ],
      "dependencyDashboardApproval": false,
      "automerge": true
    }
  ],
  "hostRules": [
    {
      "matchHost": "https://kubernetes-charts.storage.googleapis.com",
      "description": "Kubernetes Charts"
    }
  ]
}